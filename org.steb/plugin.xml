<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.startup">
      <startup
            class="org.steb.Activator"></startup>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="org.steb.preferences.PreferencePage"
            id="org.steb.preferences.PreferencePage"
            name="Steb">
      </page>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="org.steb.preferences.PreferenceInitializer">
      </initializer>
   </extension>
   <extension
         point="org.eclipse.ui.popupMenus">
      <objectContribution
            adaptable="true"
            id="org.steb.contribution1"
            objectClass="org.eclipse.core.resources.IResource">
         <action
               class="org.steb.popup.actions.CopyPath"
               enablesFor="1"
               id="org.steb.newAction"
               label="Copy Path"
               menubarPath="additions">
         </action>
      </objectContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="org.steb.commands.category"
            name="Steb">
      </category>
      <command
            categoryId="org.steb.commands.category"
            id="org.steb.commands.sampleCommand"
            name="Toggle Steb Listener Command">
         <state
               class="org.eclipse.ui.handlers.RegistryToggleState:false"
               id="org.eclipse.ui.commands.toggleState">
         </state>
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.steb.handlers.StebListenerHandler"
            commandId="org.steb.commands.sampleCommand">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="org.steb.commands.sampleCommand"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+6">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="org.steb.toolbars.sampleToolbar">
            <command
                  commandId="org.steb.commands.sampleCommand"
                  icon="icons/arrow2.gif"
                  id="org.steb.toolbars.sampleCommand"
                  label="Activate Steb Listener"
                  style="toggle"
                  tooltip="Toggle Steb Listener">
            </command>
         </toolbar>
      </menuContribution>
   </extension>
   
</plugin>
